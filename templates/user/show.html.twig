
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                            <div class="main-left-sidebar no-margin">
                                <div class="user-data full-width">
                                    <div class="user-profile">
                                        <div class="username-dt">
                                            <div class="usr-pic">
                                                {% if app.user.photo != NULL %}
                                                    <img class="img-profile rounded-circle" src="{{ asset(app.user.photoPath) }}">
                                                {% else %}
                                                    <img class="img-profile rounded-circle" src="{{ asset('images/unknown_user.png') }}">
                                                {% endif %}
                                            </div>
                                        </div><!--username-dt end-->
                                        <div class="user-specs">
                                            <h1>{{ app.user.Email }}</h1>
                                        </div>
                                    </div><!--user-profile end-->
                                    <ul class="user-fw-status">
                                        <li>
                                            <h4>Following</h4>
                                            <span>34</span>
                                        </li>
                                        <li>
                                            <h4>Followers</h4>
                                            <span>155</span>
                                        </li>
                                        <li>
                                            <a href="#" title="">View Profile</a>
                                        </li>
                                    </ul>
                                </div><!--user-data end-->
                            </div><!--main-left-sidebar end-->
                        </div>
                        <div class="col-lg-6 col-md-8 no-pd">
                            <div class="main-ws-sec">
                                {% for usersearch in usersearch %}
                                <div class="company_profile_info">
                                    <div class="company-up-info">
                                        {% if  usersearch.photo != NULL %}
                                            <img class="img-profile rounded-circle" src="{{ asset(usersearch.photoPath) }}">
                                        {% else %}
                                            <img class="img-profile rounded-circle" src="{{ asset('images/unknown_user.png') }}">
                                        {% endif %}
                                        <h3>{{ usersearch.FirstName }} {{ usersearch.lastName }} </h3>
                                        <h1> {{ usersearch.Email }}</h1>
                                        <br>
                                        <ul>
                                            <li><a href="{{ path('relationship_new', {'id':  usersearch.id}) }}" title="" class="follow">Follow</a></li>
                                            <li><a href="#" title="" class="message-us"><i class="fa fa-envelope"></i></a></li>
                                        </ul>
                                    </div>
                                        <a href="{{ path('user_show', {'id':usersearch.id}) }}" title="">View Profile</a>

                                </div><!--company_profile_info end-->
                                {% endfor %}
                                <div class="process-comm">
                                    <div class="spinner">
                                        <div class="bounce1"></div>
                                        <div class="bounce2"></div>
                                        <div class="bounce3"></div>
                                    </div>
                                </div><!--process-comm end-->
                            </div><!--posts-section end-->

                        </div><!--main-ws-sec end-->
                    </div>
                </div>
            </div><!-- main-section-data end-->
        </div>
        </div>
    </main>
    <div class="post-popup job_post">
