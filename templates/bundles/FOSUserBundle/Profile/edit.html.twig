{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <!-- DataTales Example -->

    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <h1 class="h3 mb-2 text-gray-800">Veux-tu Modifer Votre profil {{ app.user.LastName }}  </h1>

<img class="img-profile rounded-circle" src="{{ asset('images/couverture.jpeg') }}">

        </div>
        <div class="card-body">

            <div class="card-body">
             

                {% trans_default_domain 'FOSUserBundle' %}

                {{ form_start(form,{ 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                {{ form_widget(form) }}
                <div>
                    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" id="ajout"
class="fa fa-trash-o btn btn-success col-md-3 offset-md-7"/>

                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock body %}